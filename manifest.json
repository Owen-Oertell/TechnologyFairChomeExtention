{
  "name": "Recipie Manager",
  "manifest_version": 2,
  "version": "0.1",
  "description": "Helps you manage your recipies, so you don't ever make the same bad thing twice!",
  "icons": {
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]  
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": ["<all_urls>", "tabs", "storage", "activeTab", "notifications"],
  "browser_action": {
      "default_popup": "popup.html"
  }
}